<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend therapy type form view to add appointment resource field -->
        <record id="therapy_type_view_form_inherit_sync" model="ir.ui.view">
            <field name="name">therapy.type.form.inherit.sync</field>
            <field name="model">therapy.type</field>
            <field name="inherit_id" ref="basic_hms.therapy_type_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="appointment_resource_id" 
                           options="{'no_create': True}"
                           help="Link to appointment resource for automatic mapping from calendar events"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>


