<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend medical patient form view to add sync appointments button -->
        <record id="medical_patient_view_form_inherit_sync" model="ir.ui.view">
            <field name="name">medical.patient.form.inherit.sync</field>
            <field name="model">medical.patient</field>
            <field name="inherit_id" ref="basic_hms.medical_patients_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_sync_appointments" 
                            type="object"
                            string="Sync Appointments" 
                            class="oe_highlight" 
                            icon="fa-calendar-check-o"
                            invisible="not patient_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
