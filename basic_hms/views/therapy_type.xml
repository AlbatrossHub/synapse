<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Therapy Type Form View -->
    <record id="therapy_type_form_view" model="ir.ui.view">
        <field name="name">therapy.type.form.view</field>
        <field name="model">therapy.type</field>
        <field name="arch" type="xml">
            <form string="Therapy Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Speech Therapy"/>
                            <field name="code" placeholder="e.g., ST"/>
                            <field name="product_id" placeholder="Select associated product"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="commission_type"/>
                            <field name="commission_value" 
                                   invisible="not commission_type"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this therapy type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Therapy Type List View -->
    <record id="therapy_type_tree_view" model="ir.ui.view">
        <field name="name">therapy.type.tree.view</field>
        <field name="model">therapy.type</field>
        <field name="arch" type="xml">
            <list string="Therapy Types">
                <field name="code"/>
                <field name="name"/>
                <field name="product_id"/>
                <field name="commission_type"/>
                <field name="commission_value"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Therapy Type Search View -->
    <record id="therapy_type_search_view" model="ir.ui.view">
        <field name="name">therapy.type.search.view</field>
        <field name="model">therapy.type</field>
        <field name="arch" type="xml">
            <search string="Search Therapy Types">
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Commission Type" name="commission_type" context="{'group_by': 'commission_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Therapy Type Action -->
    <record id="action_therapy_type" model="ir.actions.act_window">
        <field name="name">Therapy Types</field>
        <field name="res_model">therapy.type</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="therapy_type_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first therapy type!
            </p>
            <p>
                Define different types of therapies with their commission structures.
            </p>
        </field>
    </record>

    <!-- Menu Item for Therapy Types -->
    <menuitem id="menu_therapy_type"
              name="Therapy Types"
              parent="main_menu_configartion"
              action="action_therapy_type"
              sequence="5"/>

</odoo>
